<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".GroupDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок группы -->
        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Загрузка группы..."
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Детали группы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvDateCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата создания: Загрузка..."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Место: Загрузка..."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Создатель: Загрузка..."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- listNameBases: Маленький список (max 5 строк) -->
        <TextView
            android:id="@+id/tvNameBasesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список баз:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNameBases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scrollbars="vertical"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="16dp" />

        <!-- data: Маленький список (max 5 строк) -->
        <TextView
            android:id="@+id/tvDataTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Данные:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="24dp" />

        <!-- Список участников -->
        <TextView
            android:id="@+id/tvParticipantsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Участники:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvParticipants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
