<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_sours"
    android:layout_width="0dp"
    android:layout_height="@dimen/menu_linear_size"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_sours"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/menu_margin_img_size"
        android:layout_marginLeft="@dimen/menu_margin_img_size"
        android:layout_marginRight="@dimen/menu_margin_img_size"
        android:layout_marginBottom="@dimen/menu_margin_img_size2"
        android:layout_weight="6"
        android:src="@drawable/img_sours"
        app:tint="@color/menu_not_click">
    </ImageView>
    <TextView
        android:id="@+id/text_sours"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_weight="2"
        android:textSize="@dimen/menu_text_size"
        android:text="@string/title_sours"
        android:textColor="@color/material_dynamic_neutral70"/>
</LinearLayout>